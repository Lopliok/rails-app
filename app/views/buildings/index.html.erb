<h1>Listing Buildings</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th colspan="2"></th>
  </tr>

  <% @buildings.each do |building| %>
      <tr>
        <td><%= building.title %></td>
        <td><%= building.code %></td>
        <td><%= link_to 'Show', building_path(building) %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'New Building', new_building_path %>

