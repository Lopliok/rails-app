<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
  <tr>
    <th>Start at</th>
    <th>End at</th>
    <th>Duration</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.start_at %></td>
        <td><%= lesson.end_at %></td>
        <td><%= lesson.duration %></td>
        <td><%= link_to 'Show', lesson %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>


